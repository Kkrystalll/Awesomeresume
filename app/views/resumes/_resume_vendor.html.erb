<article class="resume-card">
  <header>
    <%= resume.user.name %>
  </header>

  <% if resume.mugshot.attached? %>
    <%= image_tag resume.mugshot.variant(resize_to_limit: [300, 200])%>
  <% else %>
    <%= image_pack_tag "placeholder-image.png" %>
  <% end %>

  <footer class="flex justify-between actions" >
    <%= link_to "檢視", view_resume_path(resume)  %>
    <%= link_to '花錢是老大', buy_resume_path(resume), method: :post %>
    <div data-controller="favorite-resume" data-liked="<%= current_user.liked?(resume) %>" data-resume-id="<%= resume.slug %>">
      <a href="#" data-action="click->favorite-resume#like" data-favorite-resume-target="like">讚</a>
      <a href="#" data-action="click->favorite-resume#unlike" data-favorite-resume-target="unlike">不讚</a>
    </div>
  </footer>
</article>
